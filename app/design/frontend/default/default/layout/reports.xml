<?xml version="1.0" ?>
<!-- Root node for Magento layout configuration -->
<layout version="0.1.0">
    
    
    
    <!-- Home Page -->
    <reports_index_index>
        <block type="core/text_list" name="newreference" as="newreference"/>
            
        <!-- reference tag specifies the block where we a going to add child block -->
        <reference name="content">
            <!-- Our page content block -->
            <block type="page/html" name="reports" template="reports/base.phtml"></block>
            <block type="core/template" name="newReferenceBlock" template="helloworld/helloworld.phtml" />
        </reference>
        <block type="core/template" name="newReferenceBlock" template="helloworld/helloworld.phtml" />
        <block type="page/html" name="child" template="helloworld/helloworld.phtml"></block>
    </reports_index_index>
    

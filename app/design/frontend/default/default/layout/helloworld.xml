<?xml version="1.0" ?>
<!-- Root node for Magento layout configuration -->
<layout version="0.1.0">

    <default>

        <reference name="root">
            <action method="setTemplate">
                <template>helloworld/base.phtml</template>
            </action>

            <block type="core/text_list" name="left_menu" as="left_menu" translate="label">
                <label>Left menu</label>
            </block>

            <block type="core/text_list" name="right_side" as="right_side" translate="label">
                <label>Right side</label>
            </block>


        </reference>

        <reference name="left_menu">
            <block type="core/template" name="left_menu_block" template="helloworld/leftMenu.phtml" />
        </reference>
        
        <block type="core/text_list" name="filters" template="helloworld/filters.phtml" />
        
    </default>

    <!--Page handle -->
    <helloworld_index_index>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/dashboard.phtml" />
        </reference>
    </helloworld_index_index>

    <!-- Sales by state -->
    <helloworld_index_salesbystate>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/salesByState.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_salesbystate>

    <!-- Customer ranking -->
    <helloworld_index_customerranking>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/customerRanking.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_customerranking>

    <!-- Sales by state -->
    <helloworld_index_salesbydate>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/salesByDate.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_salesbydate>
    
    <!-- Sales by year -->
    <helloworld_index_salesbyyear>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/salesByYear.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_salesbyyear>

    <!-- Cohort analysis -->
    <helloworld_index_cohortanalysis>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/cohortAnalysis.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_cohortanalysis>
    
    <!-- Sales by day and hour -->
    <helloworld_index_salesbydayandhour>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/salesByDayAndHour.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_salesbydayandhour>
    
    <!-- Average sales by customer -->
    <helloworld_index_avgsalesbycustomer>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/avgSalesByCustomer.phtml" />
        </reference>
    </helloworld_index_avgsalesbycustomer>

    <!-- New Customers -->
    <helloworld_index_newcustomers>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/newCustomers.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_newcustomers>
    
    <!-- Average Order Size -->
    <helloworld_index_averageordersize>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/averageOrderSize.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_averageordersize>
    
    <!-- Average Order Volume -->
    <helloworld_index_averageordervolume>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/averageOrderVolume.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_averageordervolume>
    
    <!-- Sales by payment method -->
    <helloworld_index_salesbypaymentmethod>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/salesByPaymentMethod.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_salesbypaymentmethod>
    
    <!-- Sales by brand -->
    <helloworld_index_salesbybrand>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/salesByBrand.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_salesbybrand>
    
    <!-- Sales map -->
    <helloworld_index_salesmap>
        <reference name="right_side">
            <block type="core/template" name="right_side_block" template="helloworld/salesMap.phtml" />
            <block type="helloworld/filters" name="filters_block" template="helloworld/filters.phtml" />
        </reference>
    </helloworld_index_salesmap>

    <!--Page handle -->
    <helloworld_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>helloworld/base.phtml</template>
            </action>
        </reference>

    </helloworld_index_index>

    <!--Page handle -->
    <helloworld_index_index1>
        <!-- reference tag specifies the block where we a going to add child block -->
        <reference name="content">
            <!-- Our page content block -->
            <block type="core/template" name="helloworld" template="helloworld/view.phtml"></block>
        </reference>
    </helloworld_index_index1>
    <helloworld_index_test>
        <!-- reference tag specifies the block where we a going to add child block -->
        <reference name="content">
            <!-- Our page content block -->
            <block type="core/template" name="helloworld" template="helloworld/salesPerYear.phtml"></block>
        </reference>
    </helloworld_index_test>
    <helloworld_index_salespermonth>
        <!-- reference tag specifies the block where we a going to add child block -->
        <reference name="content">
            <!-- Our page content block -->
            <block type="core/template" name="helloworld" template="helloworld/salesPerMonth.phtml"></block>
        </reference>
    </helloworld_index_salespermonth>
    <helloworld_index_newcustomersbydate>
        <!-- reference tag specifies the block where we a going to add child block -->
        <reference name="content">
            <!-- Our page content block -->
            <block type="core/template" name="helloworld" template="helloworld/customersPerDate.phtml"></block>
        </reference>
    </helloworld_index_newcustomersbydate>
</layout>
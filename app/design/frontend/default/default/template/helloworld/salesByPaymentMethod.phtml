    <script type="text/javascript">

        function getData() {
            
            $.ajax({
                type: "POST",
                url: "<?php echo Mage::getUrl('reports/data/getSalesByPaymentMethod'); ?>",
                dataType: 'json',
                success: function(data) {
                    
                    var newData = new Array();

                    var header = new Array(2);
                    header[0] = 'Metodo de pago';
                    header[1] = 'Monto [ARS]';
                    
                    newData.push(header);

                    for (var i = 0; i < data.length; i++) {
                        
                        var row = new Array();
                        
                        row[1] = parseFloat(data[i].amount);
                        row[0] = decodeURIComponent(escape(data[i].method));
                        
                        newData.push(row);
                    }
                    
                    drawChart(newData);
                    
                    createTable(data);

                }
            });
            
        }

        google.load("visualization", "1", {
            packages: ["corechart"]
        });
        
        google.setOnLoadCallback(getData);

        function drawChart(rawData) {
            var data = google.visualization.arrayToDataTable(rawData);

            var options = {
                title: 'Ventas por metodo de pago'
            };

            var chart = new google.visualization.BarChart(document.getElementById('chart_div'));

            chart.draw(data, options);
        }
        
        function createTable(jsonData) {
            $('#sales_by_date_table').dataTable({
                "aaData": jsonData,
                "aoColumns": [
                                { "mDataProp": "method" },
                                { "mDataProp": "amount" },
                                { "mDataProp": "qty" }
                            ]
            });
        }

        $(document).ready(function() {

            var menuLink = document.getElementById("menu_sales_by_payment_method");
            menuLink.className = "active";

        });
    
      
    </script>
    
    <div id="chart_div" style="width: 900px; height: 500px;"></div>
    
